<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- 夹爪工具宏定义 -->
  <xacro:macro name="gripper_tool" params="parent_link">
    
    <!-- 工具底座 -->
    <link name="tool_base">
      <visual>
        <geometry>
          <box size="0.05 0.05 0.02"/>
        </geometry>
        <material name="tool_material">
          <color rgba="0.8 0.8 0.8 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.05 0.05 0.02"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>
    
    <!-- 连接到机械臂末端 -->
    <joint name="tool_joint" type="fixed">
      <parent link="${parent_link}"/>
      <child link="tool_base"/>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
    </joint>
    
    <!-- 左夹爪 -->
    <link name="left_gripper">
      <visual>
        <geometry>
          <box size="0.02 0.01 0.06"/>
        </geometry>
        <material name="gripper_material">
          <color rgba="0.2 0.2 0.8 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.02 0.01 0.06"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>
    
    <!-- 右夹爪 -->
    <link name="right_gripper">
      <visual>
        <geometry>
          <box size="0.02 0.01 0.06"/>
        </geometry>
        <material name="gripper_material">
          <color rgba="0.2 0.2 0.8 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.02 0.01 0.06"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>
    
    <!-- 左夹爪关节 -->
    <joint name="left_gripper_joint" type="prismatic">
      <parent link="tool_base"/>
      <child link="left_gripper"/>
      <origin xyz="0.01 0 0.04" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit lower="-0.02" upper="0.02" effort="100" velocity="0.5"/>
    </joint>
    
    <!-- 右夹爪关节 -->
    <joint name="right_gripper_joint" type="prismatic">
      <parent link="tool_base"/>
      <child link="right_gripper"/>
      <origin xyz="-0.01 0 0.04" rpy="0 0 0"/>
      <axis xyz="-1 0 0"/>
      <limit lower="-0.02" upper="0.02" effort="100" velocity="0.5"/>
    </joint>
    
    <!-- 工具中心点 (TCP) -->
    <link name="tool_tcp">
      <visual>
        <geometry>
          <sphere radius="0.005"/>
        </geometry>
        <material name="tcp_material">
          <color rgba="1.0 0.0 0.0 1.0"/>
        </material>
      </visual>
    </link>
    
    <!-- TCP关节 -->
    <joint name="tcp_joint" type="fixed">
      <parent link="tool_base"/>
      <child link="tool_tcp"/>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
    </joint>
    
  </xacro:macro>
</robot> 